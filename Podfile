# Podfile
platform :ios, '15.0'

target 'AttendanceTracker' do
  use_frameworks! :linkage => :static # Helps avoid module issues

  # Firebase SDK
  pod 'Firebase', '~> 11.9.0'           # Full Firebase SDK
  pod 'FirebaseCore', '~> 11.9.0'       # Core Firebase features
  pod 'FirebaseAuth', '~> 11.9.0'       # Firebase Authentication
  pod 'FirebaseFirestore', '~> 11.9.0'  # Firestore Database
  pod 'FirebaseAppCheck', '~> 11.9.0'   # Firebase App Check security
end
